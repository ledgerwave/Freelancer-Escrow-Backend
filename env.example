# Application Configuration
NODE_ENV=development
PORT=5000

# Cardano Configuration (API-Only, No Local Node Required)
CARDANO_NETWORK=preprod
CARDANO_NODE_URL=https://cardano-preprod.blockfrost.io/api/v0
CARDANO_API_KEY=your_blockfrost_preprod_api_key_here
ESCROW_CONTRACT_ADDRESS=your_escrow_contract_address_here
MIN_UTXO=1000000
CARDANO_API_TIMEOUT=30000
CARDANO_RETRY_ATTEMPTS=3

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Email Configuration
EMAIL_PROVIDER=console
EMAIL_API_KEY=your_email_api_key_here
FROM_EMAIL=noreply@escrow-marketplace.com

# Push Notification Configuration
PUSH_PROVIDER=console
PUSH_API_KEY=your_push_api_key_here

# IPFS Configuration
IPFS_GATEWAY=https://ipfs.io/ipfs/
IPFS_API_URL=your_ipfs_api_url_here
IPFS_API_KEY=your_ipfs_api_key_here

# Escrow Configuration
ESCROW_DEFAULT_EXPIRY_DAYS=30
DISPUTE_RESOLUTION_DAYS=7
AUTO_REFUND_AFTER_EXPIRY=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
